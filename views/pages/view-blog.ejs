<% layout('layouts/boilerplate') %>

<!-- Blog Content -->
<div class="container py-5 mt-4">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <!-- Blog Header -->
      <article class="blog-article">
        <header class="mb-4">
          <span class="badge bg-primary mb-3"><%= blog.category %></span>
          <h1 class="display-5 fw-bold mb-4">
            <%= blog.title %>
          </h1>

          <!-- Author Info -->
          <div class="d-flex align-items-center mb-4">
            <img
              src="https://picsum.photos/60/60?random=author"
              alt="Author"
              class="rounded-circle me-3"
            />
            <div>
              <h6 class="mb-0">
                <a href="#" class="text-decoration-none"><%= blog.author.username || 'Unknown Author' %></a>
              </h6>
              <small class="text-muted">
                Published on <%= new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
              </small>
            </div>
          </div>
        </header>

        <!-- Cover Image -->
        <div class="d-flex justify-content-center mb-4">
          <img
            src="<%= blog.imageUrl || 'https://picsum.photos/800/400?random=ai' %>"
            alt="<%= blog.title %>"
            class="rounded shadow"
            style="width: 900px; height: 400px; object-fit: cover;"
          />
        </div>

        <!-- Blog Content -->
        <div class="blog-content">
          <p class="lead">
            <%= blog.content %>
          </p>
        </div>
      </article>
    </div>
  </div>
</div>

<!-- Toast for notifications -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="actionToast" class="toast" role="alert">
    <div class="toast-header">
      <i class="fas fa-info-circle text-primary me-2"></i>
      <strong class="me-auto">BlogSite</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body" id="toastMessage">
      Action completed successfully!
    </div>
  </div>
</div>
