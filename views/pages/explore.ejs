<% layout('layouts/boilerplate') %>

<!-- Explore Header -->
<div class="explore-header py-5 bg-light mt-10">
  <div class="container mt-10">
    <div class="row align-items-center">
      <div class="col-md-6">
        <h1 class="display-5 fw-bold mb-3">Explore Blogs</h1>
        <p class="lead text-muted">
          Discover amazing stories and insights from our community of writers
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Blogs Grid -->
<div class="container my-5">
  <div class="row justify-content-center" id="blogsList">
    <% blogs.forEach(function(blog, index) { %>
      <div class="col-lg-5 col-md-6 col-sm-12 mb-4 mx-3">
        <div class="card h-100 d-flex flex-column shadow-sm">
          <!-- Blog Image -->
          <img src="<%= blog.imageUrl || 'https://picsum.photos/400/250?random=' + index %>" class="card-img-top" alt="Blog Image" />

          <!-- Card Body -->
          <div class="card-body d-flex flex-column flex-grow-1">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <span class="badge bg-primary"><%= blog.category %></span>
              <small class="text-muted"><%= blog.createdAt.toDateString() %></small>
            </div>

            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text"><%= blog.contentPreview %></p>

            <!-- Author Row at Bottom -->
            <div class="mt-auto">
              <div class="d-flex align-items-center mb-3">
                <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center me-2"
                  style="width: 30px; height: 30px; font-size: 14px; font-weight: bold;">
                  <%= blog.author && blog.author.username ? blog.author.username.charAt(0).toUpperCase() : '?' %>
                </div>
                <small class="text-muted">
                  By <%= blog.author && blog.author.username ? blog.author.username : 'Unknown Author' %>
                </small>
              </div>

              <div class="mb-3">
                <span class="badge bg-light text-dark me-1">#Blog</span>
                <span class="badge bg-light text-dark me-1">#<%= blog.category %></span>
              </div>
            </div>
          </div>

          <!-- Card Footer -->
          <div class="card-footer bg-white border-0 d-flex">
            <a href="/blogs/<%= blog._id %>" class="btn btn-primary btn-sm w-100">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
