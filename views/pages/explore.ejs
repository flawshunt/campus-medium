<% layout('layouts/boilerplate') %>

<!-- Custom CSS -->
<style>
  :root {
  --primary-color: #0d6efd;
  --secondary-color: #6c757d;
  --success-color: #198754;
  --danger-color: #dc3545;
  --warning-color: #ffc107;
  --info-color: #0dcaf0;
  --light-color: #f8f9fa;
  --dark-color: #212529;
  --purple-gradient: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
  --purple-color: #8B5CF6;
  --purple-dark: #7C3AED;
  --border-radius: 0.5rem;
  --box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  --box-shadow-lg: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
  
  /* Extended color palette for better design */
  --primary-light: #b6d7ff;
  --primary-dark: #0a58ca;
  --secondary-light: #e9ecef;
  --text-primary: var(--dark-color);
  --text-secondary: var(--secondary-color);
  --text-muted: #adb5bd;
  --background-gradient: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  --card-shadow: var(--box-shadow);
  --card-shadow-hover: var(--box-shadow-lg);
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: var(--background-gradient);
  min-height: 100vh;
  color: var(--text-primary);
}

.explore-hero {
  background: var(--purple-gradient);
  position: relative;
  overflow: hidden;
  padding: 120px 0; /* Increased from 80px to 120px */
  margin-top: 60px;
  min-height: 70vh; /* Added minimum height */
}

.explore-hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}

.hero-content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: white;
}

.hero-title {
  font-size: 3.5rem;
  font-weight: 800;
  margin-bottom: 1.5rem;
  background: linear-gradient(45deg, #ffffff, var(--primary-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.2;
}

.hero-subtitle {
  font-size: 1.25rem;
  opacity: 0.95;
  max-width: 600px;
  margin: 0 auto 2rem;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
}

.search-container {
  max-width: 500px;
  margin: 0 auto;
  position: relative;
}

.search-input {
  width: 100%;
  padding: 16px 24px 16px 56px;
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: 50px;
  font-size: 1rem;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: var(--card-shadow);
  transition: var(--transition);
  color: var(--text-primary);
}

.search-input:focus {
  outline: none;
  border-color: var(--warning-color);
  box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.25);
  background: white;
}

.search-input::placeholder {
  color: var(--text-muted);
}

.search-icon {
  position: absolute;
  left: 20px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--primary-color);
}

.stats-container {
  display: flex;
  justify-content: center;
  gap: 3rem;
  margin-top: 3rem;
}

.stat-item {
  text-align: center;
  color: white;
  padding: 1rem;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--border-radius);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.stat-number {
  font-size: 2rem;
  font-weight: 700;
  display: block;
  color: var(--warning-color);
}

.stat-label {
  font-size: 0.875rem;
  opacity: 0.9;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.blogs-section {
  padding: 80px 0;
  position: relative;
  background: var(--light-color);
}

.section-header {
  text-align: center;
  margin-bottom: 4rem;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.section-subtitle {
  font-size: 1.125rem;
  color: var(--text-secondary);
  max-width: 600px;
  margin: 0 auto;
}

.blog-card {
  background: white;
  border-radius: var(--border-radius);
  box-shadow: var(--card-shadow);
  transition: var(--transition);
  overflow: hidden;
  height: 100%;
  display: flex;
  flex-direction: column;
  border: 1px solid var(--secondary-light);
}

.blog-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--card-shadow-hover);
  border-color: var(--primary-color);
}

.blog-image {
  width: 100%;
  height: 240px;
  object-fit: cover;
  transition: var(--transition);
}

.blog-card:hover .blog-image {
  transform: scale(1.05);
}

.blog-content {
  padding: 1.5rem;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.blog-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.category-badge {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: white;
  padding: 0.375rem 0.875rem;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  box-shadow: var(--box-shadow);
}

.blog-date {
  color: var(--text-muted);
  font-size: 0.875rem;
  font-weight: 500;
  background: var(--secondary-light);
  padding: 0.25rem 0.75rem;
  border-radius: var(--border-radius);
}

.blog-title {
  font-size: 1.375rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.75rem;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.blog-title:hover {
  color: var(--primary-color);
}

.blog-excerpt {
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 1.5rem;
  flex-grow: 1;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.blog-footer {
  margin-top: auto;
}

.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--secondary-light);
}

.author-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: var(--purple-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  margin-right: 0.75rem;
  font-size: 1rem;
  box-shadow: var(--box-shadow);
}

.author-details {
  flex-grow: 1;
}

.author-name {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.875rem;
  margin: 0;
}

.author-role {
  color: var(--text-muted);
  font-size: 0.75rem;
  margin: 0;
}

.blog-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.tag {
  background: var(--secondary-light);
  color: var(--text-secondary);
  padding: 0.25rem 0.75rem;
  border-radius: 16px;
  font-size: 0.75rem;
  font-weight: 500;
  border: 1px solid var(--secondary-color);
  transition: var(--transition);
}

.tag:hover {
  background: var(--info-color);
  color: white;
  border-color: var(--info-color);
}

.read-more-btn {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: var(--border-radius);
  font-weight: 600;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition);
  width: 100%;
  box-shadow: var(--box-shadow);
}

.read-more-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px -8px var(--primary-color);
  color: white;
  text-decoration: none;
  background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
}

.floating-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.floating-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(13, 110, 253, 0.1), rgba(13, 202, 240, 0.1));
  animation: float 6s ease-in-out infinite;
}

.floating-circle:nth-child(1) {
  width: 100px;
  height: 100px;
  top: 10%;
  left: 10%;
  animation-delay: 0s;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(124, 58, 237, 0.15));
}

.floating-circle:nth-child(2) {
  width: 150px;
  height: 150px;
  top: 60%;
  right: 10%;
  animation-delay: 2s;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(13, 110, 253, 0.1));
}

.floating-circle:nth-child(3) {
  width: 80px;
  height: 80px;
  bottom: 20%;
  left: 20%;
  animation-delay: 4s;
  background: linear-gradient(135deg, rgba(124, 58, 237, 0.12), rgba(13, 202, 240, 0.12));
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.loading-skeleton {
  background: linear-gradient(90deg, var(--secondary-light) 25%, #e0e0e0 50%, var(--secondary-light) 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

  @media (max-width: 768px) {
    .explore-hero {
    padding: 100px 0; /* Increased mobile padding */
    min-height: 60vh;
  }
  
    .hero-title {
      font-size: 2.5rem;
    }
    
    .stats-container {
      gap: 2rem;
    }
    
    .stat-number {
      font-size: 1.5rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .blog-card {
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 576px) {
    .explore-hero {
    padding: 80px 0; /* Increased mobile padding */
    min-height: 50vh;
  }
  
    .hero-title {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1rem;
    }
    
    .stats-container {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

<!-- Explore Hero Section -->
<div class="explore-hero">
  <div class="floating-elements">
    <div class="floating-circle"></div>
    <div class="floating-circle"></div>
    <div class="floating-circle"></div>
  </div>
  
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">Discover Amazing Stories</h1>
      <p class="hero-subtitle">
        Explore a curated collection of insightful articles, creative stories, and expert perspectives from our vibrant community of writers and thinkers.
      </p>
    </div>
  </div>
</div>

<!-- Blogs Section -->
<div class="blogs-section">
  <div class="floating-elements">
    <div class="floating-circle"></div>
    <div class="floating-circle"></div>
  </div>
  
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Latest Articles</h2>
      <p class="section-subtitle">
        Dive into our carefully curated selection of articles that inspire, educate, and entertain.
      </p>
    </div>
    
    <div class="row" id="blogsList">
      <% blogs.forEach(function(blog, index) { %>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4 blog-item" data-category="<%= blog.category.toLowerCase() %>" data-title="<%= blog.title.toLowerCase() %>" data-author="<%= blog.author?.username?.toLowerCase() || '' %>">
          <article class="blog-card">
            <div style="overflow: hidden;">
              <img 
                src="<%= blog.imageUrl || 'https://picsum.photos/400/240?random=' + index %>" 
                class="blog-image" 
                alt="<%= blog.title %>"
                loading="lazy"
              />
            </div>
            
            <div class="blog-content">
              <div class="blog-meta">
                <span class="category-badge"><%= blog.category %></span>
                <span class="blog-date">
                  <%= new Date(blog.createdAt).toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric',
                    year: 'numeric'
                  }) %>
                </span>
              </div>
              
              <h3 class="blog-title"><%= blog.title %></h3>
              <p class="blog-excerpt"><%= blog.contentPreview %></p>
              
              <div class="blog-footer">
                <div class="author-info">
                  <div class="author-avatar">
                    <%= blog.author && blog.author.username ? blog.author.username.charAt(0).toUpperCase() : '?' %>
                  </div>
                  <div class="author-details">
                      <%= blog.author && blog.author.username ? blog.author.username : 'Anonymous' %>
                  </div>
                </div>
                
                <div class="blog-tags">
                  <span class="tag">#<%= blog.category %></span>
                  <span class="tag">#Featured</span>
                </div>
                
                <a href="/blogs/<%= blog._id %>" class="read-more-btn">
                  Read Full Article
                  <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-left: 8px;">
                    <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        </div>
      <% }) %>
    </div>
    
    <% if (blogs.length === 0) { %>
      <div class="text-center py-5">
        <div style="font-size: 4rem; margin-bottom: 1rem;">📚</div>
        <h3 style="color: var(--text-secondary); margin-bottom: 1rem;">No articles found</h3>
        <p style="color: var(--text-muted);">Be the first to share your story with our community!</p>
      </div>
    <% } %>
  </div>
</div>

<!-- Search Functionality -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('searchInput');
  const blogItems = document.querySelectorAll('.blog-item');
  
  searchInput.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase().trim();
    
    blogItems.forEach(item => {
      const title = item.dataset.title;
      const category = item.dataset.category;
      const author = item.dataset.author;
      
      const matches = title.includes(searchTerm) || 
                     category.includes(searchTerm) || 
                     author.includes(searchTerm);
      
      if (matches || searchTerm === '') {
        item.style.display = 'block';
        item.style.animation = 'fadeIn 0.5s ease-in';
      } else {
        item.style.display = 'none';
      }
    });
  });
  
  // Add fade-in animation
  const style = document.createElement('style');
  style.textContent = `
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  `;
  document.head.appendChild(style);
});
</script>
