<% layout('layouts/boilerplate') %>

    <!-- Explore Header -->
    <div class="explore-header py-5 bg-light  mt-10">
        <div class="container mt-10">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-5 fw-bold mb-3">Explore Blogs</h1>
                    <p class="lead text-muted">Discover amazing stories and insights from our community of writers</p>
                </div>
            </div>
        </div>
    </div>


    <!-- Blogs Grid -->
    <div class="container my-5">
        <div class="row justify-content-center" id="blogsList">
            <% blogs.forEach(function(blog, index) { %>
            <div class="col-lg-5 col-md-6 col-sm-12 mb-4 mx-3">
            <div class="card h-100 shadow-sm">
            <img src="<%= blog.imageUrl %>" class="card-img-top" alt="Blog Image">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                <span class="badge bg-primary"><%= blog.category %></span>
                <small class="text-muted"><%= blog.createdAt.toDateString() %></small>
                </div>
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%= blog.contentPreview %></p>

                <div class="d-flex align-items-center mb-3">
                <img src="https://picsum.photos/30/30?random=<%= index + 1 %>" alt="Author" class="rounded-circle me-2">
                <small class="text-muted">By <strong><%= blog.author && blog.author.name ? blog.author.name : 'Unknown' %></strong></small>
                </div>

                <div class="mb-3">
                <span class="badge bg-light text-dark me-1">#Blog</span>
                <span class="badge bg-light text-dark me-1">#<%= blog.category %></span>
                </div>
            </div>
            <div class="card-footer bg-white border-0 d-flex ">
                <a href="/blogs/<%= blog._id %>" class="btn btn-primary btn-sm">Read More</a>
            </div>
        </div>
    </div>
    <% }) %>
    </div>
</div>