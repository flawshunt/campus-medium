<% layout('layouts/boilerplate') %>

<!-- Dashboard Content -->
<div class="container py-5 mt-4">
  <!-- Welcome Section -->
  <div class="row mb-5">
    <div class="col-12">
      <div class="welcome-card p-4 rounded">
        <div class="row align-items-center">
          <div class="col-md-8">
            <h1 class="mb-2">Welcome back, <%= user.username %> ðŸ‘‹</h1>
            <p class="text-muted mb-0">
              Ready to share your next story with the world?
            </p>
          </div>
          <div class="col-md-4 text-md-end">
            <a href="/blog/create" class="btn btn-primary btn-lg">
              <i class="fas fa-plus me-2"></i>Create New Blog
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filter and Search -->
  <div class="row mb-4">
    <div class="col-md-6">
      <h2>My Blogs</h2>
    </div>
  </div>

  <div class="row" id="blogsContainer">
    <% blogs.forEach(function(blog) { %>
    <div
      class="col-lg-4 col-md-6 mb-4 blog-item"
      data-status="<%= blog.status.toLowerCase() %>"
    >
      <div class="blog-card h-100">
        <img src="<%= blog.imageUrl %>" class="card-img-top" alt="Blog Image" />
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <span class="badge bg-primary"><%= blog.category %></span>
            <span
              class="badge <%= blog.status === 'Published' ? 'bg-success' : 'bg-secondary' %>"
            >
              <%= blog.status %>
            </span>
          </div>
          <h5 class="card-title"><%= blog.title %></h5>
          <p class="card-text"><%= blog.contentPreview %></p>
          <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted"
              ><%= blog.publishDate.toDateString() %></small
            >
          </div>
        </div>
        <div class="card-footer">
          <div class="btn-group w-100" role="group">
            <a
              href="/blogs/<%= blog._id %>"
              class="btn btn-outline-primary btn-sm"
            >
              <i class="fas fa-eye me-1"></i>View
            </a>
            <a
              href="/blogs/<%= blog._id %>/edit"
              class="btn btn-outline-secondary btn-sm"
            >
              <i class="fas fa-edit me-1"></i>Edit
            </a>
          <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="d-inline">
            <button class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure?')">
              <i class="fas fa-trash me-1"></i>Delete
            </button>
          </form>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="js/dashboard.js"></script>
